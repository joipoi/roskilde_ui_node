      <tbody id="adminTBody">
    {{#each songs}}
    <tr data-id={{this.songID}}>
        <td contenteditable="true" class="tableCell">{{this.name}}</td>
        <td contenteditable="true" class="tableCell">{{this.artist}}</td>
         <td class="tableCell">
            <select data-category={{this.category}} class="category-select">
                {{#each ../categories}}
                    <option>
